#! /usr/bin/env node

const argv = require("yargs").usage("Fetch the chat log to a Twitch VOD.\nUsage: $0 <vod_id>[ -c][ -C <client_id>]\n\nvod_id is the ID from the VOD URL, prefixed with v.")
    .string("_")
    .demand(1)
    .env('TWITCH_CHATLOG')
    .option('c', {
        alias: 'color',
        default: false,
        describe: 'Colorize output',
        type: 'boolean'
    })
    .option('C', {
        alias: 'client-id',
        default: 'hdaoisxhhrc9h3lz3k224iao13crkkq8',
        describe: 'Twitch application client ID',
        type: 'string'
    })
    .option('p', {
        alias: 'progress',
        default: true,
        describe: 'Show a progress bar while loading the log',
        type: 'boolean'
	})
    .help('h')
    .alias('h', 'help')
    .version()
    .example("twitch-chatlog v79240813")
    .argv;

var program = require("../lib/");

program.getChatlog({
    vodId: argv._[0],
    colorize: argv.color,
    clientId: argv.clientId,
    progress: argv.progress
}).then((results) => {
    return program.printResults(results, argv.color);
}).then(console.log).catch((e) => {
    console.error(e);
    process.exit(1);
});
